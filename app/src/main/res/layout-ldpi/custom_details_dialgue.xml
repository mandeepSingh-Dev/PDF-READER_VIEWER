<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewDialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#83C3CA"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
    <TextView
        android:id="@+id/detailsDailgoue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#8A2D11"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/viewDividerDialoguie"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                app:layout_constraintTop_toBottomOf="@id/detailsDailgoue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


            <TextView
        android:id="@+id/nameDailgoue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:gravity="start"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#403434"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@id/detailsDailgoue"
        app:layout_constraintTop_toBottomOf="@id/viewDividerDialoguie"/>
    <TextView
    android:id="@+id/nameTextviewDialogue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="null.pdf"
    android:textSize="15sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/textcolor"
        android:layout_marginTop="12dp"
        android:paddingRight="20dp"
        app:layout_constraintLeft_toLeftOf="@id/detailsDailgoue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameDailgoue"/>
    <TextView
        android:id="@+id/dateDailgoue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textSize="15sp"
        android:textColor="#403434"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/detailsDailgoue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTextviewDialogue"/>
    <TextView
        android:id="@+id/datetextviewDailgoue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="28 jan 2020"
        android:textSize="15sp"
        android:textColor="@color/textcolor"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@id/detailsDailgoue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateDailgoue"/>
    <TextView
    android:id="@+id/sizeDailgoue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Size:"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="#403434"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/detailsDailgoue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datetextviewDailgoue"
        />
    <TextView
    android:id="@+id/sizeTextviewDialogue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="209kb"
        android:textSize="15sp"
        android:textColor="@color/textcolor"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@id/detailsDailgoue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sizeDailgoue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>
