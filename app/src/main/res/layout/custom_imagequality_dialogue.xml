<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/qualityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Quality"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:fontFamily="@font/candal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
  <ScrollView
      android:id="@+id/scrolvieew"
      android:layout_width="match_parent"
      android:layout_height="125dp"
      android:layout_marginTop="10dp"
      android:paddingLeft="20dp"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/radioGroupDialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!--100-->
        <RadioButton
            android:id="@+id/quality100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 %"
            />
        <!--90-->
        <RadioButton
            android:id="@+id/quality90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90 %"
            />
        <!--80-->
        <RadioButton
            android:id="@+id/quality80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80 %"/>
        <!--70-->
        <RadioButton
            android:id="@+id/quality70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70 %"/>
        <!--60-->
        <RadioButton
            android:id="@+id/quality60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 %"/>
        <!--50-->
        <RadioButton
            android:id="@+id/quality50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 %"/>
        <!--40-->
        <RadioButton
            android:id="@+id/quality40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 %"/>
        <!--30-->
        <RadioButton
            android:id="@+id/quality30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 %"/>
        <!--20-->
        <RadioButton
            android:id="@+id/quality20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 %"/>
        <!--10-->
        <RadioButton
            android:id="@+id/quality10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 %"/>
        <!--0-->
        <RadioButton
            android:id="@+id/quality0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 %"/>
        </RadioGroup>
    </LinearLayout>
  </ScrollView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/getnamecustomDialogueInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
        android:labelFor="@id/scrolvieew"
        android:layout_gravity="center"
        app:errorTextColor="#FF005D"
        app:errorEnabled="true"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/white"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="#C8B5B5"
        app:boxStrokeErrorColor="#FF4C4C"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/getNameDialogue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter File Name"
        android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/createButtondialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textAllCaps="false"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#CC770C"
        app:strokeWidth="2dp"
        app:cornerRadius="7dp"/>

</LinearLayout>