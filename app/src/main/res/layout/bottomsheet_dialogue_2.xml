<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_bottomsheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:background="#A1CC73"
    android:layout_margin="20dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/view_Design_bottomsheet"
        android:layout_width="90dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#635050"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:id="@+id/scrollview_bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_Design_bottomsheet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_bottomsheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pdficon_bottomsheet"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_pdf_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/pdfName1_bottomsheet"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="jsfhjdfhjdfhdbcdjvbudvbdjfbdjfdjfhdjfhd.pdf"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingRight="15dp"
                    app:layout_constraintLeft_toRightOf="@id/pdficon_bottomsheet"
                    app:layout_constraintTop_toTopOf="@id/pdficon_bottomsheet"
                    />

                <ImageView
                    android:id="@+id/bookmarkIcon_bottomsheet"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:layout_constraintRight_toLeftOf="@id/share_bottomsheet"
                    android:src="@drawable/ic_baseline_bookmark_border_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="15dp"/>
                <ImageView
                    android:id="@+id/removebookmarkIcon_bottomsheet"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:layout_constraintRight_toLeftOf="@id/share_bottomsheet"
                    android:src="@drawable/ic_baseline_bookmark_24"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="15dp"  />
                <ImageView
                    android:id="@+id/share_bottomsheet"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_share_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#AA8E8E"/>
            <LinearLayout
                android:id="@+id/renameLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- open pdf linearlayout-->
                <LinearLayout
                    android:id="@+id/openLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/openIcon_bottomsheet"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/ic_baseline_open_in_new_24" />
                    <TextView
                        android:id="@+id/openpdf_bottomsheet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Open"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>
                <!-- Merge pdf linearlayout-->
                <LinearLayout
                    android:id="@+id/mergeLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/mergeicon_bottomsheet"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_merge_24"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/details_bottomsheet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Merge pdf"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <!-- split pdf linearlayout-->
                <LinearLayout
                    android:id="@+id/splitLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/splitImageview_bottomsheet"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_round_call_split_24"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/splitpdf_bottomsheet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Split"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>
                <!-- delete pdf linearlayout-->
                <LinearLayout
                    android:id="@+id/deleteLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/deleteIcon_bottomsheet"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_delete_24"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/deletepdf_bottomsheet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Delete"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>
                <!-- rename pdf linearlayout-->
                <LinearLayout
                    android:id="@+id/renameeLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/renameIcon_bottomsheet"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_drive_file_rename_outline_24"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/renamePdf_bottomsheet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Rename"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>
                <!-- details pdf linearlayout-->
                <LinearLayout
                    android:id="@+id/detailsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:id="@+id/detailsIcon_bottomsheet"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_details_24"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/detailspdf_bottomsheet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Details"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>