<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/renameBackgroundcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rename PDF"
        android:layout_marginTop="25dp"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:id="@+id/renameEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new name"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/rename"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/renameButton"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/renameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="10dp"
        android:elevation="4dp"
        android:textAllCaps="false"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textColor="@color/textcolor"
        android:backgroundTint="@color/renameButtoncolor"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/renameEdittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Done"/>



</androidx.constraintlayout.widget.ConstraintLayout>